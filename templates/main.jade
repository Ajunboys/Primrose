doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="A WebVR application framework.")
    meta(name="keywords", content="WebGL, WebVR, HTML5, JavaScript, text editor, source code editor, virtual reality, Primrose")

    meta(property="og:type", content="website")
    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:site", content="@Primrose_VR")

    meta(property="og:site_name", content="Primrose VR")
    
    meta(property="og:description", content="Primrose: Framework for WebVR Applications")
    meta(name="twitter:description", content="Primrose: Framework for WebVR Applications")
    meta(property="og:url", content="http://www.primrosevr.com/" + filename)
    
    block meta
      meta(name="twitter:image", content="http://www.primrosevr.com/images/screenshot.jpg")
      meta(property="og:image", content="http://www.primrosevr.com/images/screenshot.jpg" )
    
    block title
      meta(property="og:title", content="Primrose VR: WebVR Application Framework")
      meta(name="twitter:title", content="Primrose VR: WebVR Application Framework")
      title Primrose VR: WebVR Application Framework

    block head
      link(type="text/css", rel="stylesheet", href=debug ? "/stylesheets/main.css" : "/stylesheets/main.min.css")
      script(type="text/javascript", src="/scripts/ga.min.js", async, defer)
    
  body
    block banner

    header(role="banner")
      a#logo(href="/index.html")
        img(src="/images/primrose32.png", alt="logo", title="Primrose logo")

      nav(role="navigation")
        ul
          li: a(href="/index.html#intro") intro/
          li: a(href="/index.html#webvr") webvr/
          li: a(href="/doc/") doc/
          li: a(href="/index.html#dev") download/
          li: a(href="/index.html#team") team/
          li: a(href="/index.html#mail") contact/
          li: a(href="https://github.com/capnmidnight/Primrose/", target="_blank") src/

    block main

    block footer