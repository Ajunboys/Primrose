        a(href="https://www.w3.org/html/", target="_blank"): img(src="/images/html5.png", alt="logo", title="HTML5")
        a(href="https://www.gnu.org/licenses/gpl.html", target="_blank"): img(src="/images/gplv3.png", alt="logo", title="GPLv3")
